<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <label for="name">Name</label>
    <!-- searchToken.name comes when form is submitted means sarch token shows in input value -->
    <input type="text" name="name" value="<%= searchToken.name %>">
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author =>{ %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id %>">View</a>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <!-- for deleting data don't use <a> , google will delete all data , as google go thorough each <a> link  -->
    <%- include('../partials/_deleteField',{url: `/authors/${author.id}`}) %>
<%})%>