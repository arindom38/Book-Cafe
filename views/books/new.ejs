<h2>New author</h2>
<!-- Multer adds a body object and a file or files object to the request object.  -->
<form action="/books" method="POST" enctype="multipart/form-data">
    <div>
        <label for="name">Title </label>
        <input name="title" type="text" value="" />
    </div>
    <div>
        <label for="author">Author</label>
        <select name="author" >
            <% authors.forEach(author=> { %> <% if(author.id===book.author) {%>
                    <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                    <% } else {%>
                        <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
                        <% } %>
                            <% }) %>
        </select>
    </div>
    <div>
        <label for="publishDate">Publish Date </label>
        <input name="publishDate" type="date" value="<%= book.publishDate == null ? '' : 
        book.publishDate.toISOString().split('T')[0] %>" />
    </div>
    <div>
        <label for="pageCount">Page Count </label>
        <input name="pageCount" type="number" min="1" value="<%= book.pageCount %>" />
    </div>
    <div>
        <label for="cover">Cover </label>
        <input name="cover" type="file" />
    </div>
    <div>
        <label for="description">Description </label>
        <textarea name="description" cols="30" rows="10" value="<%= book.description %>"></textarea>
    </div>
    <a href="/books">Cancel</a>
    <button type="submit">create</button>
</form>